{
  "crons": [
    {
      "path": "/api/send-weekly-report",
      "schedule": "0 21 * * 5"
    },
    {
      "path": "/api/send-daily-report", 
      "schedule": "0 12 * * 1-5"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/bt/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, max-age=0, must-revalidate" }
      ]
    }
  ]
}
